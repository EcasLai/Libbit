<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeReservationFragment">


    <ImageView
        android:id="@+id/btnMakeReservationBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="@dimen/screen_horizontal_margin"
        android:layout_marginTop="@dimen/element_margin_far"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <ImageView
        android:id="@+id/ivClickMakeReservationMore"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="@dimen/element_margin_far"
        android:layout_marginEnd="@dimen/screen_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_dialog_info" />

    <TextView
        android:id="@+id/tvMakeReservationHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Reservation"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnMakeReservationBack"
        app:layout_constraintEnd_toStartOf="@+id/ivClickMakeReservationMore"
        app:layout_constraintStart_toEndOf="@+id/btnMakeReservationBack"
        app:layout_constraintTop_toTopOf="@+id/btnMakeReservationBack" />

    <TextView
        android:id="@+id/tvMakeReservationBookNameHint"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/screen_horizontal_margin"
        android:layout_marginTop="@dimen/screen_vertical_margin"
        android:gravity="center"
        android:text="Book Name"
        app:layout_constraintEnd_toStartOf="@+id/tvReserveBookName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMakeReservationBack" />

    <TextView
        android:id="@+id/tvReserveBookName"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="@dimen/screen_horizontal_margin"
        android:gravity="center_vertical"
        android:text="Book info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvMakeReservationBookNameHint"
        app:layout_constraintTop_toBottomOf="@+id/btnMakeReservationBack" />

    <TextView
        android:id="@+id/tvReserveBookAuthor"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="@dimen/screen_horizontal_margin"
        android:gravity="center_vertical"
        android:text="Book info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvMakeReservationBookAuthorHint"
        app:layout_constraintTop_toBottomOf="@+id/tvMakeReservationBookNameHint" />

    <TextView
        android:id="@+id/tvMakeReservationBookAuthorHint"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/screen_horizontal_margin"
        android:layout_marginTop="@dimen/screen_vertical_margin"
        android:gravity="center"
        android:text="Book Author"
        app:layout_constraintEnd_toStartOf="@+id/tvReserveBookAuthor"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMakeReservationBookNameHint" />

    <TextView
        android:id="@+id/tvMakeReservationDateHint"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/screen_horizontal_margin"
        android:layout_marginTop="@dimen/element_margin_far"
        android:gravity="center"
        android:text="Reservation Date"
        app:layout_constraintEnd_toStartOf="@+id/editTextReserveDate"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMakeReservationBookAuthorHint" />

    <EditText
        android:id="@+id/editTextReserveDate"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/element_margin_far"
        android:layout_marginEnd="@dimen/screen_horizontal_margin"
        android:clickable="true"
        android:focusable="false"
        android:gravity="center_vertical"
        android:hint="Select Date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvMakeReservationDateHint"
        app:layout_constraintTop_toBottomOf="@+id/tvMakeReservationBookAuthorHint" />

    <TextView
        android:id="@+id/tvMakeReservationDateHint2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/screen_horizontal_margin"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Reservation Deadline"
        app:layout_constraintEnd_toStartOf="@+id/editTextDeadlineDate"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMakeReservationDateHint" />



    <EditText
        android:id="@+id/editTextDeadlineDate"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="@dimen/screen_horizontal_margin"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:hint="Select Date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvMakeReservationDateHint2"
        app:layout_constraintTop_toBottomOf="@+id/tvMakeReservationDateHint" />

    <TextView
        android:id="@+id/tvMakeReservationVenueHint"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/screen_horizontal_margin"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Pickup Location"
        app:layout_constraintEnd_toStartOf="@+id/venueSpinner"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMakeReservationDateHint2" />

    <Spinner
        android:id="@+id/venueSpinner"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="@dimen/screen_horizontal_margin"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvMakeReservationVenueHint"
        app:layout_constraintTop_toBottomOf="@+id/tvMakeReservationDateHint2" />

    <Button
        android:id="@+id/btnMakeReservationSubmit"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/screen_horizontal_margin"
        android:layout_marginEnd="@dimen/screen_horizontal_margin"
        android:layout_marginBottom="@dimen/screen_vertical_margin"
        android:fontFamily="@font/roboto_bold"
        android:text="Confirm"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>